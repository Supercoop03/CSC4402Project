<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Worker List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
    <h1>List of Workers</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Contact Info</th>
                <th>Skills</th>
                <th>Availability</th>
                <th>Assignment ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% workers.forEach(worker => { %>
            <tr>
                <td><%= worker.Name %></td>
                <td><%= worker.Address %></td>
                <td><%= worker.ContactInfo %></td>
                <td><%= worker.Skills %></td>
                <td><%= worker.Availability %></td>
                <td><%= worker.AssignmentID %></td>
                <td>
                    <a href="/workers/edit/<%= worker.WorkerID %>">Edit</a>
                    <a href="/workers/delete/<%= worker.WorkerID %>" onclick="return confirm('Are you sure you want to delete this worker?');">Delete</a>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    
    <a href="/workers/add">Add New Worker</a>
</body>
</html>
